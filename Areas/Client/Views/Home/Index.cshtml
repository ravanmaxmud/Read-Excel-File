@using Read_Excel_File.Areas.Client.ViewCompanents;
@using Read_Excel_File.Areas.Client.ViewModels.Home;
@model ModelIndexViewModel


<div class="container-fluid">
    <div style="display:flex; flex-direction:column; justify-content:center; align-items:center;">
        <a class="btn btn-danger" asp-route="client-auth-logout">Log Out</a>
        <a asp-route="client-home-sort" id="home-sort"></a>

        <select asp-for="CategoryId" id="CategoryIdSelect" class="form-control select-catagory "
                asp-items="@(new SelectList(Model.Categories, nameof(CategoryViewModel.Id), nameof(CategoryViewModel.Name)))" class="form-select"> </select>
        <span asp-validation-for="Categories" class="text-danger"></span>

        <div class="shopPageProduct">
            @await Component.InvokeAsync(nameof(SortModel),new {categoryId = ViewBag.CategoryId })
        </div>
    </div>
</div>

